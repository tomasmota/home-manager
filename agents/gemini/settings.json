{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    },
    "enablePermanentToolApproval": true
  },
  "general": {
    "vimMode": true,
    "previewFeatures": true
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "CONTEXT.md",
      "GEMINI.md"
    ],
    "includeDirectories": [
      "~/.agents"
    ],
    "loadMemoryFromIncludeDirectories": true
  },
  "tools": {
    "allowed": [
      "git"
    ],
    "exclude": [
      "run_shell_command(tofu apply)"
    ],
    "approvalMode": "auto_edit"
  },
  "model": {
    "name": "gemini-3-pro-preview",
    "compressionThreshold": 0.9
  },
  "ui": {
    "showHomeDirectoryWarning": false,
    "hideBanner": true,
    "showMemoryUsage": false
  },
  "mcpServers": {
    "GeminiCloudAssist": {
      "command": "npx",
      "args": [
        "-y",
        "@google-cloud/gemini-cloud-assist-mcp@latest"
      ],
      "timeout": 600000
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--no-usage-statistics",
        "--no-performance-crux"
      ],
      "timeout": 120000
    },
    "opentofu": {
      "url": "https://mcp.opentofu.org/sse"
    },
    "confluence": {
      "url": "https://mcp.atlassian.com/v1/mcp"
    }
  },
  "experimental": {
    "plan": true
  }
}
